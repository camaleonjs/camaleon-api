        },
        {
            "name": "Rafael Vargas",
            "email": "raafvargas@hotmail.com"
        }
    ],
    "license": "ISC",
    "dependencies": {
        "restify": "^5.2.0",
        "tsc": "^1.20150623.0",
        "tslint": "^5.5.0",
        "typescript": "^2.4.1"
    },
    "devDependencies": {
        "@types/node": "^8.0.50",
        "nodemon": "^1.11.0",
        "ts-node": "^3.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/camaleonjs/camaleon-api.git"
    }
}
